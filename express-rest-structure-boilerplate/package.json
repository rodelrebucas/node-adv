{
  "name": "express-rest-minimal-boilerplate",
  "version": "1.0.0",
  "description": "### Features",
  "engines": {
    "node": ">=8"
  },
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_END=development nodemon --inspect=9299 --exec babel-node ./src/index.js",
    "start:prod": "npm run babel && cross-env NODE_ENV=production pm2 start ./app/index.js",
    "babel": "node_modules/.bin/babel src -d app",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/register --require @babel/polyfill --timeout 20000 --recursive tests",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-start": "yarn docs"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "http-status": "^1.3.1",
    "joi": "^14.3.1",
    "lokijs": "^1.5.6",
    "morgan": "^1.9.1",
    "pm2": "^3.3.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "opn-cli": "^4.0.0",
    "supertest": "^3.4.2"
  }
}
