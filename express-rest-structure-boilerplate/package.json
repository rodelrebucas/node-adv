{
  "name": "express-rest-minimal-boilerplate",
  "version": "1.0.0",
  "description": "### Features",
  "engines": {
    "node": ">=8"
  },
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_END=development nodemon --inspect=9299 --exec babel-node ./src/index.js",
    "start:prod": "npm run babel && cross-env NODE_ENV=production pm2 start ./app/index.js",
    "babel": "node_modules/.bin/babel src -d app",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/register --require @babel/polyfill --timeout 20000 --recursive tests",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-start": "yarn docs"
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.1",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^3.5.3",
    "helmet": "^3.21.1",
    "http-status": "^1.3.2",
    "joi": "^14.3.1",
    "lokijs": "^1.5.7",
    "morgan": "^1.9.1",
    "pm2": "^3.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^1.3.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "opn-cli": "^4.1.0",
    "supertest": "^3.4.2"
  }
}
